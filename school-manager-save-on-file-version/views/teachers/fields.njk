<div class="item">
  <div>Avatar URL</div>
  <div>
    <input 
      type="text"
      name="avatar_url" 
      placeholder="http://" 
      value="{{ teacher.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Professor</div>
  <div>
    <input 
      type="text" 
      name="name" 
      placeholder="Nome do professor"
      value="{{ teacher.name }}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input
     type="date" 
     name="birth"
     value="{{ teacher.birth }}">     
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="schooling">
      <option value="">Selecione</option>
      <option value="Ensino Médio Completo">Ensino Médio Completo</option>
      <option value="Ensino Superior Completo">Ensino Superior Completo</option>
      <option value="Mestrado">Mestrado</option>
      <option value="Doutorado">Doutorado</option>
    </select> 
  </div>
</div>

<div class="item">
  <div>Tipo de Aula</div>
  <div>
    <span>
      <input 
        type="radio" 
        name="class_type" 
        value="Presential" 
        {% if teacher.gender == 'Presential' %}
          checked
        {% endif %}>Presencial</span>
    <span>
      <input 
        type="radio" 
        name="class_type" 
        value="Distance"
        {% if teacher.gender == 'Distance' %}
          checked
        {% endif %}
        >A Distância</span>
  </div>
</div>

<div class="item">
  <div>Áreas de atuação</div>
  <div>
    <input 
      type="text" 
      name="services" 
      placeholder="Separadas por vírgula()"
      value="{{ teacher.services }}">
  </div>
</div>

<button type="submit">Salvar</button>