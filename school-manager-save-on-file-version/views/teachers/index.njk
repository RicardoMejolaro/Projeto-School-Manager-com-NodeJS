{% extends "layout.njk" %}

{% block head %}
  <title>Nossos Professores</title>
{% endblock %}

{% block content %}
  <div class="card table-container">
   <a href="/teachers/create">Novo</a>
   <table>
     <thead>
       <tr>
         <th>Professor(a)</th>
         <th class="viewOptional">Áreas de atuação</th>
         <th>Ação</th>
       </tr>
     </thead>
     <tbody>
       {% for teacher in teachers %}
        <tr>
          <td>
            <span style="background-image: url({{ teacher.avatar_url }})"></span>
            {{ teacher.name }}
          </td>
          <td class="viewOptional">
            {% for service in teacher.services.split(",") %}
              <span>{{ service }}</span>
            {% endfor %}       
          </td>

          <td><a href="/teachers/{{ teacher.id }}">Detalhes</a></td>
        </tr>
       {% endfor %}
     </tbody>
   </table>
  </div>
{% endblock %}