{% extends "layout.njk" %}

{% block head %}
  <title>Detalhes Professor - {{teacher.name}}</title>
{% endblock %}

{% block content %}
  <div class="card">
    <section class="details">

      <h3>Detalhes</h3>

      <div class="item">
        <div>Professor</div>
        <div>{{ teacher.name }}</div>
      </div>

      <div class="item">
        <div>Idade</div>
        <div>{{ teacher.age }}</div>
      </div>

      <div class="item">
        <div>Grau de escolaridade</div>
        <div>{{ teacher.schooling }}</div>
      </div>

      <div class="item">
        <div>Tipo de Aula</div>
        <div>{{ teacher.class_type }}</div>
      </div>

      <div class="item">
        <div>Áreas de atuação</div>
        <div>
          {% for service in teacher.services %}
          <span>{{ service }}</span>
          {% endfor %}       
        </div>
      </div>

      <div class="item">
        <div>Desde</div>
        <div>{{ teacher.created_at }}</div>
      </div>

      <a class="button" href="/teachers/{{ teacher.id }}/edit ">Editar</a>

    </section>
    <section 
      class="avatar"
      style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover;">
    </section>
  </div>

{% endblock %}