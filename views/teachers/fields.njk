<div class="item">
  <div>Avatar URL</div>
  <div>
    <input 
      type="text"
      name="avatar_url" 
      placeholder="http://" 
      value="{{ teacher.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Professor</div>
  <div>
    <input 
      type="text" 
      name="name" 
      placeholder="Nome do professor"
      value="{{ teacher.name }}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input
     type="date" 
     name="birth"
     value="{{ teacher.birth }}">     
  </div>
</div>

<div class="item">
  <div>Grau de escolaridade</div>
  <div>
    <select name="schooling">
      <option value="">Selecione</option>
      <option
        value="medium" 
        {% if teacher.schooling == "medium" %}selected{% endif %}
        >Ensino Médio Completo
      </option>
      <option
        value="graduate"
        {% if teacher.schooling == "graduate" %}selected{% endif %}
        >Ensino Superior Completo
      </option>
      <option
        value="masters"
        {% if teacher.schooling == "masters" %}selected{% endif %}
        >Mestrado
      </option>
      <option
        value="doctorate"
        {% if teacher.schooling == "doctorate" %}selected{% endif %}
        >Doutorado
      </option>
    </select> 
  </div>
</div>

<div class="item">
  <div>Tipo de Aula</div>
  <div>
    <span>
      <input 
        type="radio" 
        name="class_type" 
        value="presential" 
        {% if teacher.class_type == 'presential' %}
          checked
        {% endif %}>Presencial</span>
    <span>
      <input 
        type="radio" 
        name="class_type" 
        value="distance"
        {% if teacher.class_type == 'distance' %}
          checked
        {% endif %}
        >A Distância</span>
  </div>
</div>

<div class="item">
  <div>Áreas de atuação</div>
  <div>
    <input 
      type="text" 
      name="services" 
      placeholder="Separadas por vírgula(,)"
      value="{{ teacher.services }}">
  </div>
</div>

