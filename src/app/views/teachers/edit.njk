{% extends "layout.njk" %}

{% block head %}
  <title>Editar Professor</title>
{% endblock %}

{% block content %}
  <div class="card">
    <section class="details">

      <form id="form-save" method="POST" action="/teachers?_method=PUT">

          <h3>Editar Professor</h3>

          {% include 'teachers/fields.njk' %}

          <input 
            type="hidden" 
            name="id" 
            value="{{ teacher.id }}">
          <button type="submit">Salvar</button>
      </form>

      <form id="form-delete" method="POST" action="/teachers?_method=DELETE">
        <input
         type="hidden" 
         name="id" 
         value="{{ teacher.id }}">
        <button type="submit">Deletar</button>
      </form>

    </section>
     <section 
      class="avatar" 
      style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover;">
    </section>
  </div>
{% endblock %}