<div class="item">
  <div>Avatar URL</div>
  <div>
    <input 
      type="text"
      name="avatar_url" 
      placeholder="http://" 
      value="{{ student.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Aluno</div>
  <div>
    <input 
      type="text" 
      name="name" 
      value="{{ student.name }}">
  </div>
</div>

<div class="item">
  <div>Email</div>
  <div>
    <input 
      type="email" 
      name="email" 
      value="{{ student.email }}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input
     type="date" 
     name="birth"
     value="{{ student.birth }}">     
  </div>
</div>

<div class="item">
  <div>Ano Escolar</div>
  <div>
    <select name="school_year">
      <option value="">Selecione</option>
      <option
        value="5EF" 
        {% if student.school_year == "5EF" %}selected{% endif %}
        >5º Ano do Ensino Fundamental
      </option>
      <option
        value="6EF" 
        {% if student.school_year == "6EF" %}selected{% endif %}
        >6º Ano do Ensino Fundamental
      </option>
      <option
        value="7EF" 
        {% if student.school_year == "7EF" %}selected{% endif %}
        >7º Ano do Ensino Fundamental
      </option>
      <option
        value="8EF" 
        {% if student.school_year == "8EF" %}selected{% endif %}
        >8º Ano do Ensino Fundamental
      </option>
      <option
        value="1EM" 
        {% if student.school_year == "1EM" %}selected{% endif %}
        >1º Ano do Ensino Médio
      </option>
      <option
        value="2EM" 
        {% if student.school_year == "2EM" %}selected{% endif %}
        >2º Ano do Ensino Médio
      </option>
      <option
        value="3EM" 
        {% if student.school_year == "3EM" %}selected{% endif %}
        >3º Ano do Ensino Médio
      </option>
    </select> 
  </div>
</div>

<div class="item">
  <div>Carga horária</div>
  <div>
    <input 
      type="number" 
      name="workload" 
      placeholder="Somente números"
      value="{{ student.workload }}">
  </div>
</div>

